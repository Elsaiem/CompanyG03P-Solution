@using CompanyG03PL.ViewModels
@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role</h1>
<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <partial name="RolePartialView/PartialViewEditCreate" model="@Model" />

    <a asp-action="AddOrRemoveUser" asp-route-RoleID="@Model.Id" class="btn btn-success">Add Or Remove Role</a>

    <br />
    <input type="submit" value="Edit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>



@section hamada {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

