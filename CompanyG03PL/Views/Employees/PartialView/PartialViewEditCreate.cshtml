@using CompanyG03PL.ViewModels
@model EmployeeViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var department = new SelectList( ViewData["Department"]as IEnumerable<Department>,nameof(Department.Id),nameof(Department.Name));

}
<div class="form-group">
    <label asp-for="Name" class="col-form-label">Name</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label">Age</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label">Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label">Phone Number</label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary" class="col-form-label">Salary</label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" class="col-form-label">Address</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
    <label asp-for="IsActive" class="form-check-label">Is Active</label>
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HireDate" class="col-form-label">Hiring Date</label>
    <input asp-for="HireDate" class="form-control" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="WorkForId" class="col-form-label">Department</label>
    <select asp-for="WorkForId" asp-items="department" class="form-control" >
        <option value="@null">---Select Department---</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Image" class="col-form-label">Upload Image</label>
    <input type="file" asp-for="Image" class="form-control" />
  
</div>
