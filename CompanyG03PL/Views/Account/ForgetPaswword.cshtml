@using CompanyG03PL.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPaswword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
    <div asp-validation-summary="All"></div>
    <div class="agileits-top">
        <form asp-action="SendResetPasswordUrl" method="post">
            <input class="text email" asp-for="Email" placeholder="Email" required />
           
            <input type="submit" value="Reset Password" />
        </form>
        <p>Don't have an Account? <a asp-action="SignUp">Register Now</a></p>
    </div>
</div>
